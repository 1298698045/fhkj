  background: #fff;
  padding-bottom: 80px;
}
.wrap .banner {
  background: #fff;
  height: 272rpx;
  position: relative;
}
.wrap .banner .img {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border-radius: 12rpx;
}
.wrap .banner ._span {
  display: inline-block;
  color: #fff;
  font-size: 24rpx;
  width: 179rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  position: absolute;
  top: 60rpx;
